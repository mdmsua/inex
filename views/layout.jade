doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/paper/bootstrap.min.css')
        if dev
            link(rel='stylesheet', href='/fontawesome/css/font-awesome.css')
        else
            link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
        title= title
    body
        nav.navbar.navbar-default
            div.container
                div.navbar-header
                    a.navbar-brand(href='/') Expenses
                div.navbar-collapse.collapse
                    p.navbar-text.navbar-right
                        span.fa(class='fa-#{user.provider}')
                        | &nbsp;#{user.displayName}&nbsp;
                        a.navbar-link(href='/auth/logout')
                            span.glyphicon.glyphicon-off
        main.container
            block content
        if dev
            script(src='expenses.js')
            script(src='/jquery/dist/jquery.js')
        else
            script(src='//az750101.vo.msecnd.net/public/expenses.js')
            script(src='//code.jquery.com/jquery-2.1.3.min.js')
