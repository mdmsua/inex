doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/paper/bootstrap.min.css')
        title= title
    body
        nav.navbar.navbar-default
            div.container
                div.navbar-header
                    a.navbar-brand(href='/') Expenses
                div.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li.dropdown
                            a(href, data-toggle='dropdown').dropdown-toggle
                                span.glyphicon.glyphicon-user
                                | Hello
                                b.caret
                            ul.dropdown-menu
                                li
                                    a(href='/auth/logout')
                                        span.glyphicon.glyphicon-off
                                        | Logout
        main.container
            block content
        if dev
            script(src='js/expenses.js')
        else
            script(src='//az750101.vo.msecnd.net/public/js/expenses.min.js')