extends ../layout

block content
    header.page-header
        h1= title
    table.table.table-striped
        thead
            tr
                th Date
                th Amount
                th Description
        tbody
            - for (var i = 0, payment = payments.length ? payments[0] : { }; i < payments.length; i++, payment = payments[i])
                tr
                    td= payment.date
                    td
                        span(class=payment.amount > 0 ? 'text-success' : 'text-danger')= payment._amount
                    td= payment.description